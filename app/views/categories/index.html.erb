<h1>Categories</h1>
<%= link_to 'Create category' , new_category_path%><br>

<table>
  <tr><br>
    <th>Name</th>
  </tr>
   <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>   
      <td><%= link_to 'Show', category_path(category) %></td>
      <td><%= link_to 'edit', edit_category_path(category) %></td>
      <td><%= button_to 'Delete', category_path(category),method: :delete,data: { confirm:'Are you sure' } %></td>
    </tr>
  <% end %>
</table>
